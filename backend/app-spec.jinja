alerts:
- rule: DEPLOYMENT_FAILED
- rule: DOMAIN_FAILED
features:
- buildpack-stack=ubuntu-22
ingress:
  rules:
  - component:
      name: carrentproject
    cors:
      allow_credentials: true
      allow_headers:
      - '*'
      allow_methods:
      - GET
      - HEAD
      - POST
      - PUT
      - DELETE
      - PATCH
      - OPTIONS
      - TRACE
      - CONNECT
      allow_origins:
      - regex: .*
    match:
      path:
        prefix: /
name: {{ env.DO_APP_COMPONENT_NAME }}
region: fra
services:
- dockerfile_path: Dockerfile
  envs:
  - key: DB_HOST
    scope: RUN_AND_BUILD_TIME
    value: {{ env.DB_HOST }}
  - key: DB_NAME
    scope: RUN_AND_BUILD_TIME
    value: {{ env.DB_NAME }}
  - key: DB_USER
    scope: RUN_AND_BUILD_TIME
    value: {{ env.DB_USER }}
  - key: DB_PASSWORD
    scope: RUN_AND_BUILD_TIME
    value: {{ env.DB_PASSWORD }}
  - key: DB_PORT
    scope: RUN_AND_BUILD_TIME
    value: "{{ env.DB_PORT }}"
  - key: DJANGO_SECRET_KEY
    scope: RUN_AND_BUILD_TIME
    value: {{ env.DJANGO_SECRET_KEY }}
  - key: CARRENT_DEBUG
    scope: RUN_AND_BUILD_TIME
    value: "0"
  - key: AWS_ACCESS_KEY_ID
    scope: RUN_AND_BUILD_TIME
    value: {{ env.AWS_ACCESS_KEY_ID }}
  - key: AWS_SECRET_ACCESS_KEY
    scope: RUN_AND_BUILD_TIME
    value: {{ env.AWS_SECRET_ACCESS_KEY }}
  gitlab:
    branch: main
    repo: mikhailmid/carrentproject
  http_port: 80
  instance_count: 1
  instance_size_slug: basic-xxs
  name: carrentproject
  source_dir: /
